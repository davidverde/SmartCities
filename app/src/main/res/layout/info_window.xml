<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulEscuro"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tipo_anom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:layout_below="@+id/titulo_info"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="descricao"
            android:layout_margin="5dp"
            android:layout_below="@+id/tipo_anom"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center_horizontal" />



        <TextView
            android:id="@+id/utilizador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text=""
            android:layout_below="@+id/descricao"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/utilizador"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            />


    </RelativeLayout>

</LinearLayout>